# EPANSA App Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ========================================
# Remote Agent API Configuration
# ========================================
# Base URL of your remote AI agent server
AGENT_API_BASE_URL=https://your-agent-server.example.com/api/v1

# API Key for authenticating requests to the remote agent
AGENT_API_KEY=your_agent_api_key_here

# WebSocket URL for real-time communication (optional)
AGENT_WEBSOCKET_URL=wss://your-agent-server.example.com/ws

# Use mock data for testing (true/false)
# Set to true to use mock responses instead of calling the real backend
USE_MOCK_DATA=false

# ========================================
# Google OAuth Configuration
# ========================================
# Google OAuth Client ID for Android
GOOGLE_OAUTH_CLIENT_ID_ANDROID=your_android_client_id.apps.googleusercontent.com

# Google OAuth Client ID for iOS
GOOGLE_OAUTH_CLIENT_ID_IOS=your_ios_client_id.apps.googleusercontent.com

# Google OAuth Client ID for Web (if needed)
GOOGLE_OAUTH_CLIENT_ID_WEB=your_web_client_id.apps.googleusercontent.com

# Google API Key (for services that require it)
GOOGLE_API_KEY=your_google_api_key_here

# ========================================
# Environment Configuration
# ========================================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug logging
DEBUG_MODE=true

# ========================================
# Feature Flags
# ========================================
# Enable background sync
ENABLE_BACKGROUND_SYNC=true

# Sync interval in minutes
BACKGROUND_SYNC_INTERVAL=30

# Enable voice input
ENABLE_VOICE_INPUT=true

# Enable user confirmation for sensitive actions
REQUIRE_USER_CONFIRMATION=true

# ========================================
# Optional: Third-party Services
# ========================================
# Firebase configuration (if using for push notifications, analytics, etc.)
# FIREBASE_API_KEY=your_firebase_api_key
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# FIREBASE_APP_ID_ANDROID=your_android_app_id
# FIREBASE_APP_ID_IOS=your_ios_app_id

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here
